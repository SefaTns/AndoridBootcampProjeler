<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewSonuc"
        android:layout_width="366dp"
        android:layout_height="59dp"
        android:layout_marginTop="176dp"
        android:background="#CCB6B6"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSifir"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="0"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonYedi" />

    <Button
        android:id="@+id/buttonYedi"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="7"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDort" />

    <Button
        android:id="@+id/buttonSekiz"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="8"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toEndOf="@+id/buttonYedi"
        app:layout_constraintTop_toBottomOf="@+id/buttonBes" />

    <Button
        android:id="@+id/buttonDokuz"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="78dp"
        android:text="9"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSekiz"
        app:layout_constraintTop_toBottomOf="@+id/buttonAlti" />

    <Button
        android:id="@+id/buttonBes"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="5"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toEndOf="@+id/buttonDort"
        app:layout_constraintTop_toBottomOf="@+id/buttonIki" />

    <Button
        android:id="@+id/buttonAlti"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="78dp"
        android:text="6"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonBes"
        app:layout_constraintTop_toBottomOf="@+id/buttonUc" />

    <Button
        android:id="@+id/buttonUc"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="78dp"
        android:text="3"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonIki"
        app:layout_constraintTop_toBottomOf="@+id/buttonTopla" />

    <Button
        android:id="@+id/buttonIki"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="2"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toEndOf="@+id/buttonBir"
        app:layout_constraintTop_toBottomOf="@+id/buttonSil" />

    <Button
        android:id="@+id/buttonSil"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="S"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toEndOf="@+id/buttonTemizle"
        app:layout_constraintTop_toBottomOf="@+id/textViewSonuc" />

    <Button
        android:id="@+id/buttonTopla"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="78dp"
        android:text="+"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSil"
        app:layout_constraintTop_toBottomOf="@+id/textViewSonuc" />

    <Button
        android:id="@+id/buttonDort"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="4"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBir" />

    <Button
        android:id="@+id/buttonBir"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="1"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTemizle" />

    <Button
        android:id="@+id/buttonTemizle"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="C"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSonuc" />

    <Button
        android:id="@+id/buttonNokta"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="."
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintStart_toEndOf="@+id/buttonSifir"
        app:layout_constraintTop_toBottomOf="@+id/buttonSekiz" />

    <Button
        android:id="@+id/buttonSonuc"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="80dp"
        android:layout_height="61dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="73dp"
        android:text="="
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonNokta"
        app:layout_constraintTop_toBottomOf="@+id/buttonDokuz" />
</androidx.constraintlayout.widget.ConstraintLayout>